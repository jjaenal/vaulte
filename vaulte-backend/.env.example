# Environment Configuration
NODE_ENV=development
PORT=3001

# Blockchain Configuration
RPC_URL=http://localhost:8545
PRIVATE_KEY=your_private_key_here

# Contract Addresses (update after deployment)
DATA_VAULT_ADDRESS=0x...
DATA_MARKETPLACE_ADDRESS=0x...
PAYMENT_SPLITTER_ADDRESS=0x...
ACCESS_CONTROL_ADDRESS=0x...

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# API Keys (comma-separated for multiple keys)
API_KEYS=dev-key-1,dev-key-2

# Database Configuration (for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/vaulte_db

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# OAuth Configuration (for data integrations)
GOOGLE_CLIENT_ID=your-google-client-id
